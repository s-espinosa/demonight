<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @project.name %></span>
          <p>Group Members: <%= @project.group_members %></p>
          <p>
            Able to present at finals:
            <% if @project.final_confirmation %>
            <i class="material-icons finals-yes">done</i>
            <% else %>
            <i class="material-icons finals-no">not_interested</i>
            <% end %>
          </p>
        </div>
        <div class="card-action">
          <p><%= link_to "Edit #{@project.name}", edit_admin_project_path(@project), class: 'btn turing-btn waves-effect waves-light' %></p>
          <p><%= link_to "Other Projects from this Code Fair", admin_demo_night_path(@project.demo_night), class: 'btn turing-btn waves-effect waves-light' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
